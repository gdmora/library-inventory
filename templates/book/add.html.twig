{% extends 'base.html.twig' %}

{% block title %}Add new book{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h3 class="mt-5 mb-5 text-center">Add a new book</h3>
        <div class="col-md-6 offset-md-3">
            {{form_start(form)}}
            <div class="form-group">
                {{form_label(form.title)}}
                {{form_widget(form.title, {'attr':{'class':'form-control'}})}}
            </div>
            <div class="form-group">
                {{form_label(form.summary)}}
                {{form_widget(form.summary, {'attr':{'class':'form-control'}})}}
            </div>
            <div class="form-group">
                {{form_label(form.publication_year)}}
                {{form_widget(form.publication_year, {'attr':{'class':'form-control'}})}}
            </div>
            <div class="form-group">
                {{form_label(form.author)}}
                {{form_widget(form.author, {'attr':{'class':'form-control'}})}}
            </div>
            <div class="form-group text-center">
                <button class="btn btn-primary mt-2">Submit</button>
            </div>
            {{form_end(form)}}
        </div>
    </div>
</div>
{% endblock %}
